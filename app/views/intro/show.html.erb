<div class="intro-message-wrapper">
  <div class="intro-message-content">
    <%= @intro_message.content %>
  </div>

  <% if @intro_message.next_message.present? %>
    <div class="next-button">
      <%= link_to root_path(m: @intro_message.next_message.id) do %>
        <i class="icon arrow circle right"></i>
      <% end %>
    </div>
  <% end %>
</div>
